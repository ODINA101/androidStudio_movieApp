<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="500dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="500dp"

            android:background="@drawable/com_facebook_auth_dialog_header_background"
            android:backgroundTint="@color/com_facebook_button_login_silver_background_color"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movie_img"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                app:srcCompat="@drawable/ic_launcher_background"
                tools:ignore="VectorDrawableCompat"
                android:transitionName="pzzoto"/>


            <TextView
                android:id="@+id/des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/movie_img"
                android:layout_marginStart="42dp"
                android:layout_marginTop="39dp"
                android:text="description"
                android:textColor="@android:color/background_dark" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/playMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/movie_img"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="65dp"
                android:clickable="true"
                app:srcCompat="@mipmap/ic_play_video" />



        </RelativeLayout>
</android.support.v4.widget.NestedScrollView>